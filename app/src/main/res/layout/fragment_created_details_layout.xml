<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:orientation="vertical"
        android:layout_gravity="start">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/title_created_event_fr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:textColor="#B9B7A7"
                android:layout_margin="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time: "
                android:layout_weight="0.9"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#B9B7A7"
                android:layout_margin="20dp"/>

            <TextView
                android:layout_weight="0.4"
                android:id="@+id/time_created_event_fr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="#B9B7A7"
                android:layout_margin="20dp"/>

        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date: "
                android:layout_weight="0.9"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#B9B7A7"
                android:layout_margin="20dp"/>

            <TextView
                android:layout_weight="0.4"
                android:id="@+id/date_created_event_fr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="#B9B7A7"
                android:layout_margin="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No. reservations: "
                android:layout_weight="0.9"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#B9B7A7"
                android:layout_margin="20dp"/>

            <TextView
                android:layout_weight="2"
                android:id="@+id/numRes_created_event_fr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="#B9B7A7"
                android:layout_margin="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Users that have a reservation: "
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#B9B7A7"
                android:layout_margin="20dp"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_created_events_fr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_marginTop="25dp"
                />

            <TextView
                android:id="@+id/CreatedEventsMsgFr"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="#B9B7A7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </LinearLayout>



    </LinearLayout>
</ScrollView>